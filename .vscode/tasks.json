{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "cl",
            "args": [
                "main.c",
                "*.obj"
            ],
            "dependsOn": "Dependency",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "Dependency",
            "type": "shell",
            "command": "cl",
            "args": [
                "/c",
                "*.c"
            ],
            "group": "build",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "type": "shell",
            "label": "ExecuteDIR",
            "command": "main.exe",
            "dependsOn": "Compile",
            "group": "build",
            "options": {
                "cwd": "${fileDirname}"
            }            
        },
        {
            "label": "CompileThis",
            "type": "shell",
            "command": "cl",
            "args": [
                "${fileBasename}"
            ],
            "group": "build",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "shell",
            "label": "ExecuteThis",
            "command": "${fileBasenameNoExtension}.exe",
            "dependsOn": "CompileThis",
            "group": "build",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"]         
        }
    ]
}