{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "*.cpp",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "Dependency",
            "type": "shell",
            "command": "cl",
            "args": [                
                "/EHsc",
                "*.cpp"
            ],
            "group": "build",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "type": "shell",
            "label": "ExecuteDIR",
            "command": "${fileBasenameNoExtension}.exe",
            "dependsOn": "Compile",
            "group": "build",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "CompileThis",
            "type": "shell",
            "command": "cl",
            "args": [
                "${fileBasename}"
            ],
            "group": "build",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "ExecuteThis",
            "command": "${fileBasenameNoExtension}.exe",
            "dependsOn": "CompileThis",
            "group": "build",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ]
        }
    ]
}