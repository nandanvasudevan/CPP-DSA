{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "cl",
            "args": [
                "/EHsc",
                "${fileBasenameNoExtension}.cpp",
                "*.obj"
            ],
            "dependsOn": "Dependency",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "Dependency",
            "type": "shell",
            "command": "cl",
            "args": [
                "/c",
                "/EHsc",
                "*.cpp"
            ],
            "group": "build",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "type": "shell",
            "label": "ExecuteDIR",
            "command": "${fileBasenameNoExtension}.exe",
            "dependsOn": "Compile",
            "group": "build",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "CompileThis",
            "type": "shell",
            "command": "cl",
            "args": [
                "${fileBasename}"
            ],
            "group": "build",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "ExecuteThis",
            "command": "${fileBasenameNoExtension}.exe",
            "dependsOn": "CompileThis",
            "group": "build",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}